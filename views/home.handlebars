{{#each posts as |post|}}
<div class = "post">
    <div class = "post-title">
        <h2>{{post.title}}</h2>
        <p>Posted by {{post.username}} on {{format_date post.date_created}}</p>
    </div>
    <div class = "post-content">
        <p>{{post.content}}</p>
        <p><a href ="/post/{{post.id}}</p>"></a>
    </div>
    </div>
{{/each}}